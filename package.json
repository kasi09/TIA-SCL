{
  "name": "tia-scl",
  "displayName": "TIA-SCL",
  "description": "Siemens SCL (Structured Control Language) syntax highlighting, snippets and autocomplete for TIA Portal",
  "version": "0.3.0",
  "publisher": "kasi09",
  "author": "kasi09",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kasi09/TIA-SCL"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "keywords": [
    "scl",
    "siemens",
    "tia portal",
    "plc",
    "structured control language",
    "structured text",
    "iec 61131",
    "s7",
    "automation"
  ],
  "icon": "icons/tia-scl-icon.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:scl"
  ],
  "contributes": {
    "languages": [
      {
        "id": "scl",
        "aliases": [
          "SCL",
          "Structured Control Language",
          "TIA SCL"
        ],
        "extensions": [
          ".scl",
          ".SCL"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "scl",
        "scopeName": "source.scl",
        "path": "./syntaxes/scl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "scl",
        "path": "./snippets/scl.snippets.json"
      }
    ]
  },
  "scripts": {
    "build": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --watch",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  }
}
